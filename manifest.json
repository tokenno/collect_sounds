    {
      "name": "Admin Panel",
      "short_name": "Admin",
      "description": "Access admin controls",
      "url": "/admin.html"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+soundhunt",
      "url": "/?sound=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import-sound",
      "accept": {
        "audio/*": [".mp3", ".wav", ".ogg"]
      },
      "icons": [
        {
          "src": "icons/file-icon-64x64.png",
          "sizes": "64x64",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=net.tokeno.soundhunt",
      "id": "net.tokeno.soundhunt"
    }
  ],
  "prefer_related_applications": false
}

